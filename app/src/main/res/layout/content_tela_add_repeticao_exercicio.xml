<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corListaPretoClaro"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_tela_add_repeticao_exercicio"
    tools:context="com.example.galdino.academia_102.Telas.TelaAddRepeticaoExercicio"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/Divisor1"
        android:background="@color/corActionBarPretoEscuro"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ©rie(s)"
            android:id="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/txtSerie"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/corTextoBranco"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSerie"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginTop="10dp"
            android:textColor="@color/corTextoBranco"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnMaisRepeticao"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtSerie"
            android:layout_toEndOf="@+id/txtSerie"
            android:background="@color/corDetalhesAmarelos"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btnMenosRepeticao"
            android:layout_alignTop="@+id/btnMaisRepeticao"
            android:layout_toRightOf="@+id/btnMaisRepeticao"
            android:layout_toEndOf="@+id/btnMaisRepeticao"
            android:layout_marginLeft="10dp"
            android:background="@color/corDetalhesAmarelos"/>
    </RelativeLayout>
    <View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="55dp"
        android:background="@color/corDetalhesAmarelos" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvRepeticoes"
        android:layout_below="@+id/Divisor1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
