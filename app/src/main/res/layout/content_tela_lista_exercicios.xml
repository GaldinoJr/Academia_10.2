<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corListaPretoClaro"
    tools:context=".TelaListaExercicios" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/Divisor1"
        android:background="@color/corActionBarPretoEscuro"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@color/corActionBarPretoEscuro"
            android:layout_marginLeft="10dp"
            android:id="@+id/imgPrincipal"
            android:src="@drawable/icone_triceps"
            />

        <TextView
            android:id="@+id/txtNomeGrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgPrincipal"
            android:layout_centerVertical="true"
            android:text="teste"
            android:textSize="@dimen/Titulotamanho25"
            android:textColor="#C0C0C0"/>
    </RelativeLayout>
    <View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="80dp"
        android:background="@color/corDetalhesAmarelos" />

    <ListView
        android:id="@+id/lvExercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Divisor1"
        android:layout_alignParentBottom="true">

    </ListView>



</RelativeLayout>