<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corListaPretoClaro"
    >

    <View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_above="@+id/Divisor2"
        android:layout_marginBottom="40dp"
        android:background="@color/corTextoBranco"
        android:visibility="invisible" />

    <View
        android:id="@+id/Divisor2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_centerVertical="true"
        android:background="@color/corTextoBranco"
        android:visibility="invisible"/>

    <View
        android:id="@+id/Divisor3"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/Divisor2"
        android:layout_marginTop="40dp"
        android:background="@color/corTextoBranco"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtNomeTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treino A"
        android:textSize="@dimen/tamanho20"
        android:textColor="@color/corTextoBranco"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/imgMarkTreino"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_mark_treinando"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtNomeTreino"
        android:layout_alignTop="@+id/txtNomeTreino"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/imgExcluirTreino"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete_branco"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="BtnExclui"
        />
</RelativeLayout>