                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/corActionBarPretoEscuro"
                >
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="4dp"
